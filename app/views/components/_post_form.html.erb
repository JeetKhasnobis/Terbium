<% if user_signed_in? %>
    <div class="panel panel-primary post-form-panel">
  <div class="panel-body row">
    <div class="col-sm-1">
      <img src='/userpunches.png' class="rounded-image" height="50px" width="50px"></img>
    </div>
    <div class="col-sm-11">
<%= form_for(@newPost) do |f| %>
  <div class="field" style="margin-left: 10px;">
<%= f.text_field :content, autofocus: true, class: "form-control" %>
<span type="button" class="btn btn-submit" style="float: right; margin-top: 3px;"><%= f.submit "Punch", class: "btn btn-primary" %></span>
  </div>
<% end %>
    </div>
  </div>
   </div>
<% end %>



